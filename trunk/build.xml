<?xml version="1.0"?>
<project name="Gmml Visio" default="compile" basedir=".">
	
	<property name="src.dir" value="src"/>
	<property name="build.dir" value="build"/>
	<property name="apidoc.dir" value="apidoc"/>
	<property name="dist.dir" value="dist"/>
	<property name="svn.exec.svnversion" value="svnversion"/>
	<property name="exec.inno.setup" value="iscc"/>
	
	<path id="project.class.path">
		<pathelement location="lib/org.eclipse.swt_3.2.0.v3232o.jar"/>
		<pathelement location="lib/org.eclipse.swt.win32.win32.x86_3.2.0.v3232m.jar"/>
		<pathelement location="lib/jdom.jar"/>
		<pathelement location="lib/JRI.jar"/>
		<pathelement location="lib/org.eclipse.core.commands_3.2.0.I20060605-1400.jar"/>
		<pathelement location="lib/org.eclipse.equinox.common_3.2.0.v20060603.jar"/>
		<pathelement location="lib/org.eclipse.jface_3.2.0.I20060605-1400.jar"/>
		<pathelement location="lib/hsqldb.jar"/>
	</path>
	
	<target name="prepare">
		<mkdir dir="${build.dir}"/>
		<mkdir dir="${apidoc.dir}"/>
		<mkdir dir="${dist.dir}"/>
	</target>
	
	<target name="clean" description="Remove all generated files.">
		<delete dir="${build.dir}"/>
		<delete dir="${apidoc.dir}"/>
	</target>
	
	<target name="compile" depends="prepare" description="Compile all sources">
		<javac srcdir="${src.dir}" destdir="${build.dir}">
			<classpath refid="project.class.path"/>
		</javac>
			
	</target>

	<target name="jar" depends="compile" description="Generates executable jar file">
		<jar jarfile="gmml-visio.jar" manifest="src/MANIFEST.MF">
			<fileset dir="${build.dir}" includes="**/*.class"/>
<!--			<fileset dir="." includes="backpage/*"/>
			<fileset dir="." includes="icons/*"/>
			<fileset dir="." includes="images/*"/>			!-->
		</jar>
	</target>
	
	<target name="docs" depends="prepare" description="generate api-docs">
		<javadoc destdir="${apidoc.dir}">
			<classpath refid="project.class.path"/>
			<package name="gmmlVision"/>
			<package name="graphics"/>
			<package name="colorSet"/>
			<package name="util"/>
			<package name="data"/>
			<sourcepath location="${src.dir}"/>
		</javadoc>		
	</target>


	<target name="dist" depends="compile,jar" description="Creates distribution zip and installer">

		<!-- query the repository for the revision nr. !-->
		<exec executable="${svn.exec.svnversion}" outputproperty="subversion_revision" failifexecutionfails="false">
			<arg line="-n ."/>
		</exec>
		<echo>Current Revision ${subversion_revision}</echo>

		<zip zipfile="${dist.dir}/GMML-Visio.${subversion_revision}.zip">		
			<fileset dir="." includes="backpage/*"/>
			<fileset dir="." includes="icons/*"/>
			<fileset dir="." includes="images/*"/>
			<fileset dir="." includes="lib/*"/>
			<fileset dir="." includes="gmml-visio.jar"/>
			<fileset dir="." includes="swt-win32-3232.dll"/>
			<fileset dir="." includes="jri.dll"/>
			<fileset dir="." includes="gmml-visio.exe"/>
		</zip>

		<!-- create a windows installer using inno-setup and gmml-visio.iss!-->
		<exec executable="${exec.inno.setup}">
			<arg line="gmml-visio.iss"/>
		</exec>		
		<move file="${dist.dir}/GMML-Visio-Setup.exe" 
			tofile="${dist.dir}/GMML-Visio-Setup.${subversion_revision}.exe" 
			overwrite="true"/>			
	</target>
	
	<target name="all" depends="clean,jar,docs,dist" description="Rebuild all"/>
	
</project>
