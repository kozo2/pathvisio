<?xml version="1.0"?>
<project name="GPML Indexer" default="jar" basedir=".">
	<property name="src.dir" value="src"/>
	<property name="build.dir" value="build"/>
	<property name="lib.dir" value="lib"/>
	<property name="dist.dir" value="dist"/>
	<property name="pathvisio.dir" value="../../"/>
	<property name="lucene.jar" value="lucene-core-2.2.0.jar"/>
	<property name="jar.name" value="wikipathways-indexer.jar"/>

	<path id="class.path">
		<pathelement location="${build.dir}"/>
		<fileset dir="lib">
			<include name="*.jar"/>
		</fileset>
		<fileset dir="${pathvisio.dir}">
			<include name="wikipathways-client.jar" />
			<include name="lib/axis-1_4/lib/*.jar" />
			<include name="pathvisio.jar"/>
			<include name="wikipathways.jar"/>
			<include name="lib/jdom.jar"/>
			<include name="lib/derby.jar"/>
			<include name="lib/apache/*.jar"/>
		</fileset>
	</path>

	<target name="prepare">
		<mkdir dir="${build.dir}"/>
		<mkdir dir="${dist.dir}"/>
	</target>

	<target name="clean" description="Remove all generated files.">
		<delete dir="${build.dir}"/>
		<delete dir="${dist.dir}"/>
	</target>

	<target name="compile" depends="prepare" description="Compile sources">
		<javac srcdir="${src.dir}"
			   includes="**"
			   destdir="${build.dir}"
			   debug="true"
			   source="1.5">
			<classpath refid="class.path"/>
		</javac>
	</target>

	<target name="jar" depends="compile" description="Generates executable jar file">
		<pathconvert refid="class.path" property="class.path.manifest" pathsep=" ">
			<mapper>
				<chainedmapper>
					<!-- remove absolute path -->
					<flattenmapper />
					<!-- add lib/ prefix -->
					<globmapper from="*" to="lib/*" />
				</chainedmapper>
			</mapper>
		</pathconvert>

		<jar jarfile="${jar.name}">
			<manifest>
				<attribute name="Main-Class" value="org.pathvisio.indexer.WikiPathwaysIndexer"/>
				<attribute name="Class-Path" value="${class.path.manifest}"/>
			</manifest>
			<fileset dir="${build.dir}" includes="**/*.class"/>
		</jar>
	</target>

	<target name="dist" depends="jar" description="Copies jar and external libraries to dist path">
		<copy file="${jar.name}" toDir="${dist.dir}"/>
		<copy file="${pathvisio.dir}/lib/jdom.jar" toDir="${dist.dir}/lib"/>
		<copy file="${pathvisio.dir}/lib/derby.jar" toDir="${dist.dir}/lib"/>
		<copy file="${pathvisio.dir}/lib/resources.jar" toDir="${dist.dir}/lib"/>
		<copy file="${pathvisio.dir}/pathvisio.jar" toDir="${dist.dir}/lib"/>
		<copy file="${pathvisio.dir}/wikipathways.jar" toDir="${dist.dir}/lib"/>
		<copy file="${pathvisio.dir}/wikipathways-client.jar" toDir="${dist.dir}/lib"/>
		<copy file="${lib.dir}/${lucene.jar}" toDir="${dist.dir}/lib"/>
		<copy file="gdb.config" toDir="${dist.dir}"/>
		<copy file="indexer.config" toDir="${dist.dir}"/>
		<copy toDir="${dist.dir}/lib">
			<fileset dir="${pathvisio.dir}/lib/axis-1_4/lib/">
				<include name="**/*.jar"/>
			</fileset>
		</copy>
	</target>
</project>
